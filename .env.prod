# Production Environment Configuration
# Used by docker-compose.prod.yml
# WARNING: This is a template. CHANGE ALL VALUES BEFORE DEPLOYING!

# ==================== DATABASE ====================
# IMPORTANT: Change these to strong, unique values!
POSTGRES_USER=plutusgrip_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_IN_PRODUCTION
POSTGRES_DB=plutusgrip_production

# ==================== BACKEND API ====================
# IMPORTANT: Generate a new SECRET_KEY for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_SECURE_SECRET_KEY_GENERATED_VALUE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS - Set to your actual domain
ALLOWED_ORIGINS=http://localhost

# ==================== FRONTEND ====================
# API URL for frontend (points to production API)
VITE_API_URL=http://localhost
