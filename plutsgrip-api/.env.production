# Production Environment Configuration
# IMPORTANT: Set all required values before deploying!

# PostgreSQL Configuration
# Change these to strong, unique values!
POSTGRES_USER=plutusgrip_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_IN_PRODUCTION
POSTGRES_DB=plutusgrip_production

# Application Configuration
APP_ENV=production
DEBUG=False

# Security (MUST be changed for production!)
SECRET_KEY=CHANGE_THIS_TO_SECURE_SECRET_KEY_GENERATED_VALUE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Configuration (Update to your production domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# pgAdmin Configuration (Disabled in production)
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Database Pool Configuration (Production)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=60

# Logging Configuration
LOG_LEVEL=INFO

# Additional Production Settings
# Maximum connections
DB_POOL_RECYCLE=3600

# Rate Limiting (if implemented)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
